<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6"> <!-- Utilisez la classe col-lg-6 pour limiter la largeur du formulaire -->
      <form id="form1" class="form-group">
        <div class="form-input my-4"> <!-- Supprimez la classe col-lg-12 pour centrer verticalement le contenu -->
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3 p-4", placeholder: "Your email address" %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-3 p-4", placeholder: "Set your password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-3 p-4", placeholder: "Retype your password" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-dark btn-lg rounded-1" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </form>
    </div>
  </div>
</div>

